<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="25dp"
    android:paddingHorizontal="5dp"
    android:background="@drawable/bottom_sheet_shape"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/dialogbg"
        android:layout_marginHorizontal="146dp"
        android:layout_marginBottom="10dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSaveUpdateMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/boder_button"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginStart="170dp"
        android:layout_marginTop="190dp"
        android:fontFamily="@font/time_new_roman"
        android:text="Lưu"
        android:textSize="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancleUpdateMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="270dp"
        android:textColor="@color/white"
        android:layout_marginTop="190dp"
        android:background="@drawable/boder_button"
        android:fontFamily="@font/time_new_roman"
        android:text="Hủy"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/time_new_roman"
        android:paddingVertical="8dp"
        android:text="Cập Nhật"
        android:textAlignment="viewStart"
        android:textColor="@color/MainColorDuAnMau"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btnCancleDialogMember"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/cancle_icon" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUpdateMember"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/add_image"

        />

    <EditText
        android:id="@+id/edtDateMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="132dp"
        android:fontFamily="@font/time_new_roman"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Năm Sinh"
        android:inputType="text"
        android:textColor="@color/MainColorDuAnMau"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edtNameMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:gravity="center"
        android:fontFamily="@font/time_new_roman"
        android:hint="Tên Thành Viên"
        android:inputType="text"
        android:textColor="@color/MainColorDuAnMau"
        android:textSize="15dp" />


</RelativeLayout>


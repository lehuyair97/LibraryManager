<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:background="@color/white"
    app:cardCornerRadius="9dp">
    <RelativeLayout
        android:id="@+id/rlBook"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="10dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/imgBook"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dacnhantam" />
        <LinearLayout
            android:id="@+id/ll"
            android:layout_marginLeft="85dp"
            android:layout_width="310dp"
            android:gravity="center"
            android:layout_height="80dp"
            android:orientation="vertical"
            >
            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/time_new_roman"
                android:id="@+id/tvNameBook1"
                android:text="Tên sách: Đắc Nhân Tâm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="3dp"/>
            <TextView
                android:fontFamily="@font/time_new_roman"
                android:textColor="@color/black"
                android:id="@+id/tvCategoryBook"
                android:text="Thể loại: Self-help"
                android:layout_width="match_parent"
                android:paddingVertical="3dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/time_new_roman"
                android:textColor="@color/black"
                android:id="@+id/tvPriceBook1"
                android:text="Price: 11000"
                android:layout_width="match_parent"
                android:paddingVertical="3dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvIDBook"
            android:textColor="@color/black"
            android:fontFamily="@font/time_new_roman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="17dp"
            android:text="1" />
        />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
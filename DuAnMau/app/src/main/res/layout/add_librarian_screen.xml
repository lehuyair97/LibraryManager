<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:theme="@style/ThemeOverlay.MaterialComponents.Light"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:background="@drawable/top_screen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="288dp"
            android:layout_marginEnd="130dp"
            android:fontFamily="@font/hienhanh3"
            android:paddingVertical="8dp"
            android:text="CREATE"
            android:textAlignment="center"
            android:textColor="@color/MainColorDuAnMau"
            android:textSize="35dp"
            android:textStyle="bold" />
    </RelativeLayout>
   <RelativeLayout
       android:background="@color/white"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >


       <EditText

           android:id="@+id/edtAddName"
           android:layout_width="180dp"

           android:layout_height="40dp"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           android:layout_marginStart="25dp"
           android:layout_marginTop="50dp"
           android:textColorHint="@color/black"
           android:textColor="@color/MainColorDuAnMau"
           android:textSize="15dp"
           android:fontFamily="@font/time_new_roman"
           android:hint="Your Full Name" />

       <EditText
           android:shadowColor="@color/black"
           android:textColorHint="@color/black"
           android:textColor="@color/MainColorDuAnMau"
           android:layout_height="40dp"
           android:textSize="15dp"
           android:id="@+id/edtIDAdd"
           android:layout_width="180dp"
           android:layout_alignParentTop="true"
           android:layout_alignParentStart="true"
           android:layout_marginTop="90dp"
           android:layout_marginStart="25dp"
           android:fontFamily="@font/time_new_roman"
           android:hint="ID" />

       <EditText
           android:shadowColor="@color/black"
           android:textColorHint="@color/black"
           android:textColor="@color/MainColorDuAnMau"
           android:inputType="textPassword"
           android:textSize="15dp"
           android:id="@+id/edtPW"
           android:layout_width="180dp"
           android:layout_height="40dp"
           android:layout_alignParentTop="true"
           android:layout_alignParentStart="true"
           android:layout_marginTop="130dp"
           android:layout_marginStart="25dp"
           android:fontFamily="@font/time_new_roman"
           android:hint="PassWord" />

       <EditText
           android:inputType="textPassword"
           android:textColor="@color/MainColorDuAnMau"
           android:textColorHint="@color/black"
           android:textSize="15dp"
           android:id="@+id/edtconfirmPW"
           android:layout_width="180dp"
           android:layout_height="40dp"
           android:layout_alignParentTop="true"
           android:layout_alignParentStart="true"
           android:layout_marginTop="180dp"
           android:layout_marginStart="25dp"
           android:fontFamily="@font/time_new_roman"
           android:hint="Confirm Your Password" />


       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/btnSaveAdd"
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           android:layout_marginStart="90dp"
           android:layout_marginTop="255dp"
           android:layout_weight="1"
           android:background="@drawable/boder_button"
           android:gravity="center"
           android:paddingVertical="10dp"
           android:text="Add"

           android:textColor="@color/white" />

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/btnCancleAdd"
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_alignParentTop="true"
           android:layout_marginHorizontal="30dp"
           android:layout_marginEnd="90dp"
           android:layout_marginTop="255dp"
           android:background="@drawable/boder_button"
           android:gravity="center"
           android:paddingVertical="10dp"
           android:text="Cancle"
           android:textColor="@color/white" />

       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/add_img"
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:layout_alignParentTop="true"
           android:layout_alignParentEnd="true"
           android:layout_marginTop="58dp"
           android:layout_marginEnd="20dp"
           android:layout_weight="3"
           android:src="@drawable/add_image" />
   </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="25dp"
    android:paddingHorizontal="5dp"
    android:background="@drawable/bottom_sheet_shape"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/dialogbg"
        android:layout_marginHorizontal="146dp"
        android:layout_marginBottom="10dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSaveAddMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/boder_button"
        android:fontFamily="@font/time_new_roman"
        android:text="Lưu"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancleAddMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/boder_button"
        android:fontFamily="@font/time_new_roman"
        android:text="Hủy"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/time_new_roman"
        android:paddingVertical="8dp"
        android:text="Thêm"
        android:textAlignment="viewStart"
        android:textColor="@color/MainColorDuAnMau"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgCancleDialogAddMember"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/cancle_icon" />

    <EditText
        android:id="@+id/edtAddNameMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="85dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Nhập tên thành viên"
        android:inputType="text"
        android:textColor="@color/MainColorDuAnMau"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/edtAddAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="202dp"
        android:layout_marginEnd="85dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Nhập năm sinh"
        android:inputType="text"
        android:textColor="@color/MainColorDuAnMau"
        android:textSize="16dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAddMember"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="140dp"
        android:src="@drawable/add_image" />


</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/MainColorDuAnMau">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/MainColorDuAnMau"
        android:minHeight="35dp"
        android:theme="?attr/actionBarTheme" >

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="26dp"
            android:text="Change Password"
            android:textColor="@color/white"/>

        <ImageView

            android:layout_marginRight="30dp"
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/security" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvShowError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Password"
            android:textColor="@color/white"
            android:textSize="17dp"/>

        <EditText
            android:id="@+id/edtOldPW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="************"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textSize="17dp" />
        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:text="New Password"/>

        <EditText
            android:id="@+id/edtNewPW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="************"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textSize="17dp" />
        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:text="Confirm Your Password"/>

        <EditText
            android:id="@+id/edtRetype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="************"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textSize="17dp" />

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdateClick"
        android:layout_marginTop="15dp"
        android:paddingLeft="13dp"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:paddingRight="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Password"
        android:textSize="23dp"
        android:textColor="#10B4BB"
        android:background="@drawable/shadowbackground"
        android:layout_gravity="center"/>
</LinearLayout>